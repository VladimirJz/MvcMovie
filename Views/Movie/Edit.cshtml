@model MvcMovie.Models.MovieModel
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal">
    <h4>Editar Pelicula</h4>
    <hr />
    @Html.ValidationSummary(true, "Mensaje", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.PeliculaID)
    <!-- para cada control -->
    <div class="input-group mb-3">
        @Html.LabelFor(model => model.Titulo, new { htmlAttributes = new { @class = "form-control" } })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Titulo, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "text-danger" })

        </div>
    </div>

    <div class="input-group mb-3">
        @Html.LabelFor(model => model.FechaLanzamiento, new { htmlAttributes = new { @class = "form-control" } })
        <div class="col-md-10">
            @Html.EditorFor(model => model.FechaLanzamiento, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FechaLanzamiento, "", new { @class = "text-danger" })

        </div>
    </div>

    <div class="input-group mb-3">
        @Html.LabelFor(model => model.Genero, new { htmlAttributes = new { @class = "form-control" } })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Genero, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Genero, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="input-group mb-3">
        <span class="input-group-text">$</span>
        @Html.LabelFor(model => model.Precio, new { htmlAttributes = new { @class = "form-control" } })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Precio, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Precio, "", new { @class = "text-danger" })

        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>

}<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<br />
<h4>Pelicula Editar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PeliculaID" class="control-label"></label>
                <input asp-for="PeliculaID" class="form-control" />
                <span asp-validation-for="PeliculaID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaLanzamiento" class="control-label"></label>
                <input asp-for="FechaLanzamiento" class="form-control" />
                <span asp-validation-for="FechaLanzamiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Genero" class="control-label"></label>
                <input asp-for="Genero" class="form-control" />
                <span asp-validation-for="Genero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" />
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
